<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="margin_default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:layout_marginRight">18dp</item>
    </style>

    <style name="header_title" parent="margin_default">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="edit_text" parent="margin_default">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="button_login" parent="margin_default">
    </style>

    <style name="text_link" parent="margin_default">
    </style>

    <style name="button_facebook" parent="margin_default">
    </style>

    <style name="button_google" parent="margin_default">
    </style>
</resources>
